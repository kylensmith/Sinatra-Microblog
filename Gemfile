source 'https://rubygems.org'
# in your Gemfile
gem 'sinatra'
gem 'activerecord' # the actual ActiveRecord library 
gem 'sinatra-activerecord' # the adapter between Sinatra and # the ActiveRecord library 
gem 'rake' # a command line task runner (more on this # later)
gem 'sinatra-flash'
group :development do 
    gem 'sqlite3'
end   
group :production do 
	gem 'pg'   
end